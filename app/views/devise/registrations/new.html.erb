
<div class="signup-wrapper">
  <h2 class="signup-title">新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="signup-main">
    <div class="sigup-left">
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2>アカウント情報</h2>
       <div class="field">
        <%= f.label :email %>（必須）<br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"signup-field" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上を入力)（必須）</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"signup-field" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>（必須）<br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"signup-field" %>
      </div>
    </div>
    <div class="signup-right">
      <h2 class="signup-title2">アカウント詳細情報</h2>
      <div class="field">
        <%= f.label :name %>（必須）<br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"signup-field" %>
      </div>
      <div class="field">
        <%= f.label :producers %>（必須）<br />
        <%= f.text_field :producers, autofocus: true, autocomplete: "生産者名",class:"signup-field" %>
      </div>
      <div class="img-upload">
        <div class="img-upload-text">
          プロフィール画像
        </div>
        <div class="click-upload">
          <p>クリックしてファイルをアップロード</p>
          <%= f.file_field :image, id:"user-image" %>
        </div>
        <div id="image-list"></div>
      </div>
      <div class="field">
        <%= f.label :crops %><br/>
        <%= f.text_field :crops, autofocus: true, autocomplete: "作成している農作物",class:"signup-field" %>
      </div>
      <div class="field">
        <%= f.label :address %><br/>
        <%= f.text_field :address, autofocus: true, autocomplete: "生産拠点",class:"signup-field2" %>
      </div>
      <div class="field">
        <%= f.label :contact %><br/>
        <%= f.text_field :contact, autofocus: true, autocomplete: "お問い合わせ先",class:"signup-field2" %>
      </div>
      <div class="field">
        <%= f.label :url %><br/>
        <%= f.text_field :url, autofocus: true, autocomplete: "ホームページ",class:"signup-field2" %>
      </div>
      <div class="field">
        <%= f.label :profile %><br/>
        <%= f.text_area :profile, autofocus: true, autocomplete: "自己紹介文を書いてください",class:"user-new-profile" %>
      </div>
    </div>

  </div>
      <div class="actions">
        <%= f.submit "登録",class:"signup-btn" %>
      </div>
    <% end %>
    <div class="signup-link">
      <%= render "devise/shared/links" %>
    </div>
    <div class="user-new-back-btn">
    <%= link_to image_tag("back-icon.png"), :back %>
  </div>
</div>


