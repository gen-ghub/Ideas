

<div class="login-wrapper">
  <div class="login-main">
    <h2>ログイン</h2>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <span class="login-label"><%= image_tag 'email-icon.png'%> <%= f.label :email %>　　　　　　</span><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"login-field" %>
      </div>

      <div class="field">
        <span class="login-label"><%= image_tag 'password-icon.png'%> <%= f.label :password %>　　　　</span><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"login-field" %>
      </div>


        <% if devise_mapping.rememberable? %>
          <div class="field rememberable">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>　　　
          </div>
        <% end %>

      <div class="actions">
        <%= f.submit "ログイン",class:"login-btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links",class:"login-link" %>
  </div>
</div>




