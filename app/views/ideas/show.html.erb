<div class="idea-show-wrapper">
  <div class="cp_card04">
      <div class="photo">
        <% if @idea.image.attached? %>
          <%= image_tag @idea.image ,class:"" %>
        <% else %>
          <%= image_tag 'not.png' %>
        <% end %>
      </div>
      <div class="details">
        <div class="category">
          <p><%= @idea.tag.name %></p>
          <span id="idea_like">
            <%= render 'like', idea: @idea %>
          </span>
        </div>
        <div class="date">
          <span class="day"><%= l @idea.created_at %></span>
        </div>
      </div>
      <div class="description">
        <h1><%= @idea.title %></h1>
        <div class="text">
          <p><%= @idea.text %></p>
          <%= link_to @idea.user.name, user_path(@idea.user.id) %>
        </div>
      </div>
  </div>
  <% if user_signed_in? %>
    <% if @idea.user.id == current_user.id %>
      <div class="edit-idea-btn">
        <%= image_tag 'edit-icon.png'%>
        <%= link_to '投稿の編集', edit_idea_path(@idea.id), method: :get, class: "idea-icon-btn" %>
      </div>
      <div class="delete-idea-btn">
        <%= image_tag 'delete.png'%>
        <%= link_to '投稿を削除', idea_path(@idea.id), method: :delete, class:'idea-icon-btn' %>
      </div>
    <% end %>
  <% end %>
</div>

